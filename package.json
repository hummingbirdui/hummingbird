{
  "name": "@hummingbirdui/hummingbird",
  "version": "0.0.0-insiders.1.3",
  "description": "An open-source system designed for rapid development, without sacrificing the granular control of utility-first CSS.",
  "keywords": [
    "hummingbird",
    "tailwind",
    "tailwindcss",
    "tailwind css",
    "tailwind component",
    "component library",
    "css library",
    "tailwind ui",
    "tailwind react",
    "tailwind next",
    "tailwind vue",
    "tailwind nuxt",
    "tailwind angular",
    "tailwind svelte",
    "tailwind django",
    "tailwind laravel",
    "tailwind astro",
    "typescript",
    "javascript",
    "cjs",
    "esm",
    "umd"
  ],
  "license": "MIT",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/esm/index.d.ts",
  "style": "src/index.css",
  "repository": "https://github.com/hummingbirdui/hummingbird",
  "bugs": "https://github.com/hummingbirdui/hummingbird/issues",
  "files": [
    "dist/*.{js,css,js.map,css.map}",
    "lib/esm/**/*.{js,js.map,d.ts}",
    "lib/cjs/**/*.{js,js.map,d.ts}",
    "src/index.css",
    "src/components/**/*.css",
    "src/theme/**/*.css"
  ],
  "author": "Hummingbird UI",
  "scripts": {
    "start": "cross-env NODE_ENV=development run-p start:*",
    "start:js": "vite build --mode bundle --outDir=static --emptyOutDir=false --watch",
    "start:docs-js": "esbuild apps/docs.ts --bundle --outfile=static/docs.js --watch",
    "start:astro": "astro dev --host",
    "build:css": "cross-env NPM_ENV=production npx @tailwindcss/cli -i src/index.css -o dist/hummingbird.css",
    "build:css:min": "cross-env NPM_ENV=production npx @tailwindcss/cli -i src/index.css -o dist/hummingbird.min.css --minify",
    "build:styles": "run-s build:css build:css:min",
    "build:dist": "run-s build:dist:default build:dist:bundle build:styles",
    "build:dist:default": "vite build",
    "build:dist:bundle": "vite build --mode bundle",
    "build:lib": "vite build --config vite.lib.config.js",
    "clean:lib": "shx rm -rf lib",
    "clean:dist": "shx rm -rf dist",
    "build:npm": "run-s clean:lib build:lib clean:dist build:dist",
    "build:docs": "astro build",
    "preview": "astro preview",
    "astro": "astro"
  },
  "devDependencies": {
    "@astrojs/mdx": "^4.3.0",
    "@eslint/js": "^9.26.0",
    "@iconify/json": "^2.2.310",
    "@iconify/tailwind4": "^1.0.3",
    "@popperjs/core": "^2.11.8",
    "@rollup/plugin-terser": "^0.4.4",
    "@tailwindcss/cli": "^4.1.4",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.4",
    "@types/bootstrap": "^5.2.10",
    "@types/node": "^22.13.1",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "astro": "^5.9.2",
    "astro-auto-import": "^0.4.4",
    "bootstrap": "^5.3.3",
    "cross-env": "^7.0.3",
    "esbuild": "^0.25.4",
    "eslint": "^9.26.0",
    "globals": "^16.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "shx": "^0.4.0",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.32.1",
    "vite": "^6.1.0",
    "vite-plugin-dts": "^4.5.0"
  },
  "peerDependencies": {
    "@popperjs/core": "^2.11.8"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "dependencies": {
    "@codemirror/lang-html": "^6.4.9",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.1",
    "codemirror": "^6.0.2"
  }
}
