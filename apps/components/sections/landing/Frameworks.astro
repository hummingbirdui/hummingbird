  'opacity-20',
  'opacity-50',
  'opacity-0',
  'opacity-20',
  'opacity-50',
  'opacity-30',
  'opacity-20',
  'opacity-0',
  'opacity-0',
  'opacity-30',
  'opacity-0',
  'opacity-0',
  'opacity-20',
  'opacity-0',
  'opacity-0',
  'opacity-0',
  'opacity-0',
  'opacity-0',
  'opacity-0',
