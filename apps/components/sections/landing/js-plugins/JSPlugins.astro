---
import JSPluginCard from './JSPluginCard.astro';
import SectionWrapper from '@components/sections/landing/common/SectionWrapper.astro';
import gridLeftL from '@assets/images/landing/grids/grid-left-l.png';
import gridLeftD from '@assets/images/landing/grids/grid-left-d.png';
import ChevronIcon from '@components/icons/ChevronIcon.astro';
import { jsPlugins } from 'apps/data/landing/js-plugins';
import { getVersionedPath } from '@libs/config';
---

<div class="relative">
  <div class="absolute w-240 -left-73">
    <img src={gridLeftD.src} class="hidden dark:block object-contain" />
    <img src={gridLeftL.src} class="dark:hidden object-contain" />
  </div>

  <SectionWrapper
    id="interactive-components"
    class="max-w-315 flex flex-col xl:flex-row items-center justify-between gap-10"
  >
    <div class="flex flex-col items-center xl:items-start">
      <h1 class="mb-4 text-[28px] md:text-[32px] lg:text-[42px] text-center xl:text-left font-medium tracking-tighter">
        Modern JavaScript,<br class="sm:hidden xl:flex" /> built to perform
      </h1>
      <p class="mb-6 text-muted text-center xl:text-left max-w-145 xl:max-w-105">
        We revamped <a href="https://getbootstrap.com/docs/5.3/getting-started/javascript/">Bootstrap's JavaScript</a> for
        the modern web with TypeScript support and zero dependencies.
      </p>

      <a
        type="button"
        href={getVersionedPath('/docs/getting-started/javascript/')}
        class="flex -ml-4 btn btn-text-primary hover:bg-transparent"
        >Learn more about JavaScript <ChevronIcon />
      </a>
    </div>

    <div class="shrink-0 grid grid-cols-2 sm:grid-cols-3 gap-4">
      {jsPlugins.map((item) => <JSPluginCard component={item} />)}
    </div>
  </SectionWrapper>
</div>
