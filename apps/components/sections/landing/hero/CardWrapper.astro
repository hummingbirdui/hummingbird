---
import GradientBorderBox from '../common/GradientBorderBox.astro';

interface Props extends astroHTML.JSX.HTMLAttributes {
  class?: string;
  color: string;
}

const { class: className = '', color, ...rest } = Astro.props;
---

<GradientBorderBox color={color} class={`p-6 h-full w-full flex flex-col rounded-2xl shadow-sm ${className}`} {...rest}>
  <slot />
</GradientBorderBox>
