---
import { Code } from 'astro:components';
import CardWrapper from '../CardWrapper.astro';
import AppCode from '@components/common/AppCode.astro';
---

<CardWrapper color="secondary" class="shadow-secondary/5 dark:shadow-secondary-darker/5">
  <h3 class="mb-4 text-base font-bold">JavaScript</h3>
  <AppCode
    class="h-full !overflow-auto scrollbar-hide"
    data-astro-code
    code={`import { Modal } from "@hummingbirdui/hummingbird";
  const myModal = new Modal('.myModal');
  const button = document.querySelector('.btn');

  button.addEventListener('click', () => {
    myModal.open();
});`}
    themes={{ light: 'github-light', dark: 'github-dark' }}
    lang="javascript"
  />
</CardWrapper>
