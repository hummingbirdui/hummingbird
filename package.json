{
  "name": "hummingbird",
  "version": "0.0.1",
  "type": "module",
  "keywords": [
    "ui components",
    "tailwind",
    "tailwind css",
    "tailwind components",
    "tailwind elements",
    "tailwind library",
    "tailwind sections",
    "tailwind ui"
  ],
  "license": "MIT",
  "main": "lib/esm/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/esm/index.d.ts",
  "style": "dist/hummingbird.min.css",
  "repository": "https://github.com/hummingbird-ui/hummingbird",
  "exports": {
    ".": {
      "style": "./src/index.css",
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js",
      "default": "./lib/esm/index.js"
    },
    "./package.json": "./package.json",
    "./src/index.css": "./src/index.css",
    "./src/index": "./src/index.css"
  },
  "files": [
    "lib",
    "dist",
    "src/index.css"
  ],
  "author": "Hummingbird UI",
  "contributors": [
    "Khayrul Islam (https://www.linkedin.com/in/khayrul-developer/)"
  ],
  "scripts": {
    "start": "cross-env NODE_ENV=development run-p start:*",
    "start:js": "vite build --outDir=static --emptyOutDir=false --watch",
    "start:docs-js": "esbuild apps/docs.ts --bundle --outfile=static/docs.js --watch",
    "start:astro": "astro dev",
    "watch:css": "chokidar 'src/**/*.css' -c 'npm start'",
    "restart": "kill-port 4321 && astro dev",
    "build:docs": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "build:css": "cross-env NPM_ENV=development npx @tailwindcss/cli -i src/index.css -o dist/hummingbird.css",
    "build:css:min": "cross-env NPM_ENV=production npx @tailwindcss/cli -i src/index.css -o dist/hummingbird.min.css --minify",
    "build:dist": "vite build && npm run build:css && npm run build:css:min",
    "build:lib": "vite build --config vite.lib.config.js"
  },
  "devDependencies": {
    "@astrojs/mdx": "^4.2.6",
    "@eslint/js": "^9.26.0",
    "@iconify/json": "^2.2.310",
    "@iconify/tailwind4": "^1.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@tailwindcss/cli": "^4.1.4",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.4",
    "@types/bootstrap": "^5.2.10",
    "@types/node": "^22.13.1",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "astro": "^5.4.1",
    "bootstrap": "^5.3.3",
    "chokidar-cli": "^3.0.0",
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.6",
    "esbuild": "^0.25.4",
    "eslint": "^9.26.0",
    "globals": "^16.1.0",
    "kill-port": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.4",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.32.1",
    "vite": "^6.1.0",
    "vite-plugin-dts": "^4.5.0"
  }
}
