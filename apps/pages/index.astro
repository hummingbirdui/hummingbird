---
import Layout from '@layouts/Layout.astro';
import Hero from '@components/sections/landing/hero/Hero.astro';
import Features from '@components/sections/landing/features/Features.astro';
import Comparison from '@components/sections/landing/comparison/Comparison.astro';
import CleanMarkup from '@components/sections/landing/CleanMarkup.astro';
import Frameworks from '@components/sections/landing/Frameworks.astro';
import ModeComparison from '@components/sections/landing/ModeComparison.astro';
import Components from '@components/sections/landing/components/Components.astro';
import JSComponents from '@components/sections/landing/js-components/JSComponents.astro';
import GlobalStyles from '@components/sections/landing/global-styles/GlobalStyles.astro';
import CTA from '@components/sections/landing/CTA.astro';
import Footer from '@components/common/Footer.astro';
---

<Layout>
  <div class="overflow-hidden">
    <Hero />
    <Features />
    <Comparison />
    <CleanMarkup />
    <ModeComparison />
    <Frameworks />
    <Components />
    <GlobalStyles />
    <div class="grid grid-cols-2 items-end p-8 max-sm:grid-cols-1">
      <div class="flex flex-col items-center">
        <p class="mb-3 text-center font-mono text-xs font-medium text-gray-500">drop-shadow-cyan-500/50</p>
        <svg class="size-28 drop-shadow-2xl drop-shadow-primary-light" viewBox="0 0 84 84">
          <path d="M22.0992 77L2.19922 42.5L22.0992 8H61.8992L81.7992 42.5L61.8992 77H22.0992Z" class="fill-primary-light"
          ></path>
        </svg>
      </div>
      <div class="flex flex-col items-center">
        <p class="mb-3 text-center font-mono text-xs font-medium text-gray-500">drop-shadow-indigo-500/50</p>
        <svg class="size-28 drop-shadow-2xl drop-shadow-secondary-light" viewBox="0 0 84 84">
          <path d="M22.0992 77L2.19922 42.5L22.0992 8H61.8992L81.7992 42.5L61.8992 77H22.0992Z" class="fill-secondary-light"
          ></path>
        </svg>
      </div>
      <div class="flex flex-col items-center">
        <p class="mb-3 text-center font-mono text-xs font-medium text-gray-500">drop-shadow-cyan-500/50</p>
        <svg class="size-28 drop-shadow-2xl drop-shadow-info-light" viewBox="0 0 84 84">
          <path d="M22.0992 77L2.19922 42.5L22.0992 8H61.8992L81.7992 42.5L61.8992 77H22.0992Z" class="fill-info-light"
          ></path>
        </svg>
      </div>
      <div class="flex flex-col items-center">
        <p class="mb-3 text-center font-mono text-xs font-medium text-gray-500">drop-shadow-indigo-500/50</p>
        <svg class="size-28 drop-shadow-2xl drop-shadow-success-light" viewBox="0 0 84 84">
          <path d="M22.0992 77L2.19922 42.5L22.0992 8H61.8992L81.7992 42.5L61.8992 77H22.0992Z" class="fill-success-light"
          ></path>
        </svg>
      </div>
      <div class="flex flex-col items-center">
        <p class="mb-3 text-center font-mono text-xs font-medium text-gray-500">drop-shadow-cyan-500/50</p>
        <svg class="size-28 drop-shadow-2xl drop-shadow-warning-light" viewBox="0 0 84 84">
          <path d="M22.0992 77L2.19922 42.5L22.0992 8H61.8992L81.7992 42.5L61.8992 77H22.0992Z" class="fill-warning-light"
          ></path>
        </svg>
      </div>
      <div class="flex flex-col items-center">
        <p class="mb-3 text-center font-mono text-xs font-medium text-gray-500">drop-shadow-indigo-500/50</p>
        <svg class="size-28 drop-shadow-2xl drop-shadow-danger-light" viewBox="0 0 84 84">
          <path d="M22.0992 77L2.19922 42.5L22.0992 8H61.8992L81.7992 42.5L61.8992 77H22.0992Z" class="fill-danger-light"
          ></path>
        </svg>
      </div>
    </div>
    <JSComponents />
    <div
      class="pt-40 -mt-40 bg-cover bg-center bg-no-repeat bg-[url('/images/backgrounds/footer-bg-l.png')] dark:bg-[url('/images/backgrounds/footer-bg-d.png')]"
    >
      <CTA />
      <Footer />
    </div>
  </div>
</Layout>
