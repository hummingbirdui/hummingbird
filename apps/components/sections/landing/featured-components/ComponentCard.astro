---
import type { Component } from 'apps/data/landing/featured-components';

interface Props {
  component: Component;
  isLast: boolean;
}

const { component, isLast } = Astro.props;
const { url, image, name, count } = component;
---

<a
  href={url}
  class={`card card-action w-full rounded-2xl bg-default overflow-hidden hover:border-primary ${isLast ? 'hidden md:grid' : ''}`}
>
  <img src={image.light.src} class="h-full w-full object-cover dark:hidden" alt={name} />
  <img src={image.dark.src} class="h-full w-full object-cover hidden dark:flex" alt={name} />
  <div class="px-4 py-3">
    <h6 class="card-title mb-0.5 text-base font-semibold">{name}</h6>
    <p class="mb-0 text-xs text-highlight">{count} components</p>
  </div>
</a>
