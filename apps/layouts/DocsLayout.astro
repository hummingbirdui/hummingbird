---
import Sidebar from '../components/docs/Sidebar.astro';
import BaseLayout from '@layouts/BaseLayout.astro';
const { headings, title, description } = Astro.props;
interface Heading {
  depth: number;
  slug: string;
  text: string;
}
---

<BaseLayout {...Astro.props} fluid={true}>
  <div class="flex mt-14">
    <Sidebar />
    <div class="w-full mx-auto xl:max-w-7xl">
      <div class="flex justify-between gap-8">
        <div class="px-6 py-8 flex-1">
          <h1 class="text-3xl font-bold mb-2">{title}</h1>
          <p class="mb-8">{description}</p>
          <div class="max-w-3xl">
            <slot />
          </div>
        </div>
        <div class="not-prose max-xl:hidden sticky top-14 max-h-[calc(100svh-var(--spacing)*14)] px-6 py-8 min-w-2xs">
          <h3 class="uppercase tracking-wide mb-3 text-sm">On this page</h3>
          <ul class="space-y-1">
            <!-- {
              headings.map((heading: Heading) => (
                <li>
                  <a href={`#${heading.slug}`} class="text-sm">
                    {heading.text}
                  </a>
                </li>
              ))
            } -->
          </ul>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
