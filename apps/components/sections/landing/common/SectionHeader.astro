---
interface Props {
  title: string;
  subtitle: string;
  class?: string;
}

const { title, subtitle, class: className = '' } = Astro.props;
---

<div class={`mx-auto mb-10 max-w-126 sm:max-w-150 text-center ${className}`}>
  <h1 class="mb-4 text-[28px] md:text-[32px] lg:text-[42px] font-medium -tracking-[2.25px]">{title}</h1>
  <p class="text-muted text-base leading-[1.2]">{subtitle}</p>
</div>
