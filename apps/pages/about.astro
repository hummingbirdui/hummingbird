---
import ContentLayout from '@layouts/ContentLayout.astro';
import { aboutData } from 'apps/data/company';
---

<ContentLayout>
  <h1 class="text-3xl font-semibold mb-4">Philosophy/Vision behind the most Sensible UI library</h1>
  <p class="mb-10 text-xl text-muted">Our Mission and Guiding Principles</p>

  {
    aboutData.map((item) => (
      <div class="mb-12">
        {item.title && <h2 class="text-2xl font-semibold mb-3">{item.title}</h2>}
        <p class="text-muted tracking-tight">{item.content}</p>

        {item.subSections && (
          <div>
            {item.subSections.map((sub) => (
              <div>
                <h3 class="text-xl font-medium mb-2">{sub.subTitle}</h3>
                <p class="text-muted tracking-tight">{sub.subContent}</p>
              </div>
            ))}
          </div>
        )}
      </div>
    ))
  }
</ContentLayout>
