---
import logo from '@assets/images/logos/hummingbird.svg';
import BulbIcon from '@components/icons/BulbIcon.astro';
import MenuIcon from '@components/icons/MenuIcon.astro';
import TimesIcon from '@components/icons/TimesIcon.astro';
import GitHubIcon from '@components/icons/GithubIcon.astro';
import BulbOffIcon from '@components/icons/BulbOffIcon.astro';
import { getConfig, getVersionedPath } from '@libs/config';
import { Image } from 'astro:assets';
import '@docsearch/css';

const { currentVersion } = getConfig();
const menuItems = [
  { name: 'Docs', path: '/docs/getting-started/installation', match: '/docs' },
  { name: 'Components', path: '/docs/components/overview', match: '/docs/components' },
  { name: 'Blog', path: 'https://hummingbirdui.medium.com/', match: '/blog' },
];

const currentPath = Astro.url.pathname;
---

<nav class="navbar sticky top-0 px-6 md:px-10 py-3.75 border-b border-light bg-default z-1035">
  <div class="container px-0 max-w-8xl">
    <a class="navbar-brand flex items-center gap-2 me-1 sm:me-4" href={getVersionedPath('/')}>
      <Image src={logo} alt="Logo" class="w-10 h-10" />
      <h5 class="mb-0 text-muted font-semibold hidden sm:flex">hummingbird</h5>
    </a>
    <span class="badge badge-subtle shrink-0">{currentVersion}</span>
    <div id="docsearch" class="hidden lg:block"></div>

    <div
      class="offcanvas-xl offcanvas-end ms-auto"
      tabindex="-1"
      id="mainOffcanvas"
      aria-labelledby="mainOffcanvasLabel"
    >
      <div class="xl:hidden px-6 py-5 flex justify-between items-center">
        <a class="navbar-brand flex items-center gap-2" href="/">
          <Image src={logo} alt="Logo" class="w-10 h-10" />
          <h5 class="mb-0 text-muted font-semibold">hummingbird</h5>
        </a>
        <button
          type="button"
          class="btn-close"
          data-bs-target="#mainOffcanvas"
          data-bs-dismiss="offcanvas"
          aria-label="Close"></button>
      </div>
      <ul class="navbar-nav px-6 xl:px-0 space-y-1 xl:flex-row">
        {
          menuItems.map((item) => (
            <li class="nav-item">
              <a
                href={item.name === 'Blog' ? item.path : getVersionedPath(item.path)}
                class={`nav-link px-4 py-2 text-default text-base xl:text-sm font-normal rounded-lg hover:bg-hover ${
                  currentPath.startsWith(item.path) ? 'text-primary' : ''
                }`}
              >
                {item.name}
              </a>
            </li>
          ))
        }
      </ul>
    </div>

    <div id="docsearch-mobile" class="lg:hidden ml-auto"></div>

    <div class="mx-2 xl:mx-4 my-auto border-l h-8 xl:h-10 border-base flex lg:hidden xl:flex"></div>

    <button class="lg:ml-auto xl:ml-0 btn btn-circle btn-subtle-neutral" data-theme-toggle-btn>
      <BulbIcon data-theme-toggle="dark" class="dark:hidden" />
      <BulbOffIcon data-theme-toggle="light" class="hidden dark:block" />
    </button>
    <a
      href="https://github.com/hummingbirdui/hummingbird"
      target="_blank"
      class="ml-2 btn max-lg:btn-circle btn-subtle-neutral lg:px-3"
    >
      <GitHubIcon />
      <span class="stars-count hidden lg:flex">---</span>
    </a>
    <a
      data-bs-toggle="offcanvas"
      href="#mainOffcanvas"
      role="button"
      aria-controls="mainOffcanvas"
      class="ml-2 sm:ml-6 btn btn-circle btn-subtle-neutral flex xl:hidden"
    >
      <MenuIcon />
    </a>
  </div>
</nav>

<script>
  async function fetchStarCount() {
    const element = document.querySelector('.stars-count') as HTMLElement;
    if (!element) return;

    const cacheKey = `github-stars-hummingbirdui-hummingbird`;
    const cached = localStorage.getItem(cacheKey);

    if (cached) {
      const { stars, timestamp } = JSON.parse(cached);
      const tenMinutes = 10 * 60 * 1000;

      if (Date.now() - timestamp < tenMinutes) {
        element.textContent = stars.toLocaleString();
        return;
      }
    }

    try {
      const response = await fetch(`https://api.github.com/repos/hummingbirdui/hummingbird`);

      if (!response.ok) {
        throw new Error('Failed to fetch');
      }

      const data = await response.json();
      const stars = data.stargazers_count;

      localStorage.setItem(
        cacheKey,
        JSON.stringify({
          stars,
          timestamp: Date.now(),
        }),
      );

      element.textContent = stars.toLocaleString();
    } catch (error) {
      console.error('Error fetching GitHub stars:', error);
      if (cached) {
        const { stars } = JSON.parse(cached);
        element.textContent = stars.toLocaleString();
      } else {
        element.textContent = '0';
      }
    }
  }

  fetchStarCount();
</script>
